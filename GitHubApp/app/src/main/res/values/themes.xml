<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GithubApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/github_light_dark</item>
        <item name="colorPrimaryVariant">@color/iron_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/iron_200</item>
        <item name="colorSecondaryVariant">@color/iron_500</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.GithubApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ImageLogo">
        <item name="android:src">@drawable/github_logo_white</item>
        <item name="android:layout_width">82dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="contentDescription">logo</item>
    </style>


</resources>